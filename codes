//for loop
#include <iostream>
using namespace std;
int main(){
    int n, i;
    cout<<"Enter the number you want to print till: ";
    cin>>n;
    for(i=0;i<n;i++){
        cout<<i+1<<" ";
    }
    return 0;
}


//Rhea Kulkarni
//ENTC B1
//23070123106
//sum of no.s
#include <iostream>
using namespace std;
int main(){
    int n, i, sum=0;
    cout<<"Numbers do you want the sum for: ";
    cin>>n;
    for(i=0;i<n;i++){
        sum=sum+i;
    }
    
    cout<<"The sum of first "<<n<<" natural numbers is: "<<sum;
    return 0;
}


